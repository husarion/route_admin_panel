<launch>

    <arg name="use_laser_filter" default="true"/>

    <group if="$(arg use_laser_filter)" ns="unfiltered">
        <node name="rplidarNode" pkg="rplidar_ros" type="rplidarNode" output="screen">
            <param name="serial_port" type="string" value="/dev/ttyUSB0"/>
            <param name="serial_baudrate" type="int" value="256000"/>
            <param name="frame_id" type="string" value="laser"/>
            <param name="inverted" type="bool" value="false"/>
            <param name="angle_compensate" type="bool" value="true"/>
        </node>
    </group>

    <group if="$(arg use_laser_filter)">
        <node pkg="laser_filters" type="scan_to_scan_filter_chain" name="laser_filter">
            <rosparam command="load" file="$(find route_admin_panel)/params/laser_filter.yaml" />
            <remap from="scan" to="/unfiltered/scan" />
            <remap from="scan_filtered" to="/scan"/>
        </node>
    </group>

    <group unless="$(arg use_laser_filter)">
        <include file="$(find rplidar_ros)/launch/rplidar_a3.launch"></include>
    </group>
    <node pkg="tf2_ros" type="static_transform_publisher" name="laser_broadcaster" args="0.185 0 0 3.1415 0 0 base_link laser" />

    <include file="$(find route_admin_panel)/launch/panel.launch"></include>

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS"/>
        <rosparam file="$(find panther_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find panther_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find panther_navigation)/config/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find panther_navigation)/config/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find panther_navigation)/config/teb_planner_classic.yaml" command="load" />

        <remap from="cmd_vel" to="cmd_vel"/>
        <remap from="odom" to="odom"/>
        <remap from="scan" to="/scan"/>

    </node>

</launch>